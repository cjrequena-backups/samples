<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
	<application>
		<resource-bundle>
			<base-name>i18n.messages</base-name>
			<var>i18n</var>
		</resource-bundle>
		<locale-config>
			<default-locale>es_ES</default-locale>
			<supported-locale>es_ES</supported-locale>
			<!-- <supported-locale>en_US</supported-locale> -->
		</locale-config>
	</application>
	<factory>
		<exception-handler-factory>com.sample.architecture.commons.exceptions.ViewExpiredExceptionExceptionHandlerFactory</exception-handler-factory>
	</factory>
	 <component>
        <component-type>com.sample.architecture.tags.shiro.PrincipalTag</component-type>
        <component-class>com.sample.architecture.tags.shiro.PrincipalTag</component-class>
    </component>
</faces-config>